<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pastcontinuous.PastContinuousFragment2">

    <id.indrasudirman.belajarbahasainggris.utils.MyScrollView
        android:id="@+id/scrollViewPastContinuous2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/mainLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/exercises"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/dark_silver"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Question No 1 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="0dp"
                    android:text="@string/past_continuous_tense_test1_1"
                    android:textColor="@color/dark_silver" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tooltipsDropPastContinuousOne"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_tips" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/past_continuous_tense_test1_1_meaning"
                android:textColor="@color/dark_silver" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dropPastContinuousOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:hint="@string/drop_jawaban_disini"
                android:textSize="15sp"/>


            <!-- Question No 2 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="0dp"
                    android:text="@string/past_continuous_tense_test1_2"
                    android:textColor="@color/dark_silver" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tooltipsDropPastContinuousTwo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_tips" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/past_continuous_tense_test1_2_meaning"
                android:textColor="@color/dark_silver" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dropPastContinuousTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:hint="@string/drop_jawaban_disini"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/layoutOptionDrag"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageInfo"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:paddingTop="1dp"
                        android:src="@mipmap/ic_info_green" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:paddingStart="5dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="3dp"
                        android:paddingBottom="3dp"
                        android:text="@string/dragndrop"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/optionTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:text="is playing"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/optionOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:text="is typing"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/optionThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:text="was playing"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/optionFour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:text="was typing"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom" />

        </LinearLayout>

    </id.indrasudirman.belajarbahasainggris.utils.MyScrollView>

</FrameLayout>