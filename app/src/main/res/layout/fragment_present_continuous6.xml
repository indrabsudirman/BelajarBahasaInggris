            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/mainLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/exercises"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/dark_silver"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Question No 1 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:paddingTop="0dp"
                    android:text="@string/present_continuous_tense_test3_1"
                    android:textColor="@color/dark_silver" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tooltipsDropPresentContinuousOne"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_tips" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/present_continuous_tense_test3_1_meaning"
                android:textColor="@color/dark_silver" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dropPresentContinuousOne1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:hint="Drop jawaban 1 (1) disini"
                android:textSize="15sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dropPresentContinuousOne2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:hint="Drop jawaban 1 (2) disini"
                android:textSize="15sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dropPresentContinuousOne3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:hint="Drop jawaban 1 (3) disini"
                android:textSize="15sp"/>

            <!-- Question No 2 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:paddingTop="0dp"
                    android:text="@string/present_continuous_tense_test3_2"
                    android:textColor="@color/dark_silver" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tooltipsDropPresentContinuousTwo"
                    android:layout_width="30dp"
