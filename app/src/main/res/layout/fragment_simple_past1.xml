<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SimplePastFragment1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/simple_past_tense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/simple_past_tense"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textSize="18dp" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simple_past_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/simple_past_explain"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/simple_past_tense_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/example"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simple_past_tense_example1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/first_bullet"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simple_past_tense_example2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/second_bullet"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simple_past_tense_example3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/third_bullet"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangle">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/ic_question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/mengerti"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextSimplePast"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_shape"
                android:text="@string/next"
                android:textColor="@color/colorWhite" />


        </LinearLayout>

    </ScrollView>

</FrameLayout>