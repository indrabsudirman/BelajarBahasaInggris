<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SimplePastFragment2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:text="@string/exercises"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/dark_silver"
                android:textSize="18dp"
                android:textStyle="bold" />

            <!-- Question No 1 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/question_simple_past_test1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="0dp"
                    android:text="@string/exercise_simple_past_test1"
                    android:textColor="@color/dark_silver" />

                <Button
                    android:id="@+id/tooltip_simple_past_test1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_tips" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/first_exercise_meaning_test1"
                android:textColor="@color/dark_silver" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/answer_simple_past_test1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:hint="@string/hint"
                android:textSize="15sp">

            </com.google.android.material.textfield.TextInputEditText>


            <!-- Question No 2 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/question_simple_past_test2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="0dp"
                    android:text="@string/exercise_simple_past_test2"
                    android:textColor="@color/dark_silver" />

                <Button
                    android:id="@+id/tooltip_simple_past_test2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_tips" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/first_exercise_meaning_test2"
                android:textColor="@color/dark_silver" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/answer_simple_past_test2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:hint="@string/hint"
                android:textSize="15sp">

            </com.google.android.material.textfield.TextInputEditText>


            <!-- Question No 3 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/question_simple_past_test3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="0dp"
                    android:text="@string/exercise_simple_past_test3"
                    android:textColor="@color/dark_silver" />

                <Button
                    android:id="@+id/tooltip_simple_past_test3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_tips" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/first_exercise_meaning_test3"
                android:textColor="@color/dark_silver" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/answer_simple_past_test3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:hint="@string/hint"
                android:textSize="15sp">

            </com.google.android.material.textfield.TextInputEditText>

<!--            <androidx.appcompat.widget.AppCompatButton-->
<!--                android:id="@+id/checkAnswer"-->
<!--                android:layout_width="150dp"-->
<!--                android:layout_height="45dp"-->
<!--                android:layout_gravity="right"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:background="@drawable/rounded_shape"-->
<!--                android:text="@string/cek_jawaban"-->
<!--                android:textColor="@color/colorWhite" />-->

        </LinearLayout>


    </ScrollView>

</FrameLayout>