<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simplepastfuture.SimplePastFutureFragment1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/simple_past_tense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/simple_past_future_tense"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textSize="18dp" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simpleFutureExplain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/simple_past_future_explain"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Perhatikan gambar ini!"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack"/>

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/simplePastFutureImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/simple_past_tense_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/example"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simpleFutureExample1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/second_bullet_simple_past_future"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/simpleFutureExample2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="2dp"
                android:padding="5dp"
                android:text="@string/third_bullet_simple_past_future"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorBlack" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rectangle_green"
                android:id="@+id/layoutQuestion">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@mipmap/ic_question" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/mengerti"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"/>


        </LinearLayout>


    </ScrollView>

</FrameLayout>

