<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".simplepresent.SimplePresentFragment1">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/simple_present_tense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/simple_present_tense"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textSize="18dp" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/simplePresentExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:lineSpacingExtra="2dp"
            android:padding="5dp"
            android:text="@string/simple_present_explain"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/simple_past_tense_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/example"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/colorBlack" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/simplePresentTenseExample1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:lineSpacingExtra="2dp"
            android:padding="5dp"
            android:text="@string/first_bullet_simple_present"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/colorBlack" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/simplePresentTenseExample2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:lineSpacingExtra="2dp"
            android:padding="5dp"
            android:text="@string/second_bullet_simple_present"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/colorBlack" />

        <com.uncopt.android.widget.text.justify.JustifiedTextView
            android:id="@+id/simplePresentTenseExample3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:lineSpacingExtra="2dp"
            android:padding="5dp"
            android:text="@string/third_bullet_simple_present"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault"
            android:textColor="@color/colorBlack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_rectangle_green"
            android:id="@+id/layoutQuestion">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@mipmap/ic_question" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/mengerti"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"/>


    </LinearLayout>


</ScrollView>


</FrameLayout>